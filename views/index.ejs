<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leon's Famous Quotes Journal</title>
    <link rel="stylesheet" href="sytle.css">
</head>

<body>
    <h1>Leon's Famous Quotes</h1>

    <form action="/quotes" method="POST" class="add-form">
        <input type="text" name="name" placeholder="Contributor's Name" required>
        <input type="text" name="quote" placeholder="Quote" required>
        <button type="submit">Add Quote</button>
    </form>

    <div class="quotes-container">
        <% quotes.forEach(quote=> { %>
            <div class="quote-card" data-id="<%= quote._id %>">
                <p class="quote-text">
                    <strong>
                        <%= quote.quote %>
                    </strong>
                    <br>
                    - <%= quote.name %>
                </p>

                <!-- Edit form -->
                <div class="edit-form hidden">
                    <input type="text" class="edit-name" value="<%= quote.name %>">
                    <input type="text" class="edit-quote" value="<%= quote.quote %>">
                    <button class="save-button">Save</button>
                    <button class="cancel-button">Cancel</button>
                </div>

                <div class="quote-actions">
                    <button class="edit-button">Edit</button>
                    <button class="delete-button">Delete</button>
                </div>
            </div>
            <% }) %>
    </div>

    <script src="/main.js"></script>
</body>

</html>